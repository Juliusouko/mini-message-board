<div class="sign-wrapper">
    <div class="sign-card">
        <div class="sign-header">
            <h1>Aswito</h1>
            <h2>Sign in</h2>
        </div>
        <form action="/login" method="POST" class="sign-form">

            <div class="form-group">
                <label>Email</label>
                <input type="email" name="email" placeholder="you@example.com" required>
            </div>

            <div class="form-group">
                <label>Password</label>
                <input type="password" name="password" placeholder="••••••••" required>
            </div>

            <button type="submit" class="btn-primary">Sign In</button>
        </form>
        <div class="alternative-login">
            <span>or continue with</span>
            <div class="telegram-login-container">
                <script async src="https://telegram.org/js/telegram-widget.js?22"
                    data-telegram-login="<%= botUsername %>" data-size="large" data-radius="8"
                    data-onauth="onTelegramAuth(user)" data-request-access="write"></script>
            </div>
        </div>
        <div class="signin-footer">
            <span>By continuing, you agree to our</span>
            <a href="/terms">Terms</a>
        </div>
    </div>
</div>